{
  "module": {
    "name": "analytics",
    "version": "2.0",
    "description": "Project health monitoring, predictive analytics, and intelligent reporting system",
    "parentSystem": "../master-index.json"
  },

  "directoryStructure": {
    "metrics/": {
      "purpose": "Real-time project health indicators and KPIs",
      "contentTypes": ["health-metrics", "velocity-metrics", "quality-metrics", "kpi-dashboard"],
      "autoGenerated": true,
      "updateFrequency": "per-iteration"
    },
    "predictions/": {
      "purpose": "AI-generated forecasts and trend analysis",
      "contentTypes": ["completion-forecast", "risk-prediction", "resource-projection", "trend-analysis"],
      "autoGenerated": true,
      "updateFrequency": "every-3-iterations"
    },
    "reports/": {
      "purpose": "Comprehensive project analysis and insights",
      "contentTypes": ["project-status", "performance-analysis", "stakeholder-report", "milestone-report"],
      "autoGenerated": true,
      "updateFrequency": "every-5-iterations"
    },
    "dashboards/": {
      "purpose": "Visual project health and progress displays",
      "contentTypes": ["executive-dashboard", "team-dashboard", "health-dashboard", "progress-dashboard"],
      "autoGenerated": true,
      "updateFrequency": "real-time"
    }
  },

  "healthMonitoring": {
    "coreMetrics": {
      "projectHealth": {
        "calculation": "weighted_average_of_component_scores",
        "components": {
          "task_velocity": {
            "weight": 0.25,
            "measurement": "tasks_completed_per_iteration_vs_baseline",
            "thresholds": {
              "healthy": ">= 0.9",
              "warning": "0.7 - 0.9", 
              "critical": "< 0.7"
            }
          },
          "decision_completeness": {
            "weight": 0.20,
            "measurement": "percentage_decisions_with_complete_journey",
            "thresholds": {
              "healthy": ">= 0.95",
              "warning": "0.8 - 0.95",
              "critical": "< 0.8"
            }
          },
          "requirement_quality": {
            "weight": 0.20,
            "measurement": "percentage_requirements_passing_quality_gates",
            "thresholds": {
              "healthy": ">= 0.9",
              "warning": "0.7 - 0.9",
              "critical": "< 0.7"
            }
          },
          "documentation_coverage": {
            "weight": 0.15,
            "measurement": "percentage_completed_work_with_documentation",
            "thresholds": {
              "healthy": ">= 0.95",
              "warning": "0.8 - 0.95",
              "critical": "< 0.8"
            }
          },
          "knowledge_connectivity": {
            "weight": 0.10,
            "measurement": "percentage_work_items_with_relationships",
            "thresholds": {
              "healthy": ">= 0.8",
              "warning": "0.6 - 0.8",
              "critical": "< 0.6"
            }
          },
          "automation_effectiveness": {
            "weight": 0.10,
            "measurement": "percentage_automated_vs_manual_operations",
            "thresholds": {
              "healthy": ">= 0.8",
              "warning": "0.6 - 0.8",
              "critical": "< 0.6"
            }
          }
        }
      }
    },

    "alertSystem": {
      "criticalAlerts": {
        "project_health_critical": {
          "trigger": "overall_health_score < 0.4",
          "severity": "critical",
          "notification": ["project_manager", "stakeholders"],
          "action": "immediate_intervention_required"
        },
        "task_blockage_critical": {
          "trigger": "more_than_15_percent_tasks_blocked",
          "severity": "critical",
          "notification": ["project_manager", "team_lead"],
          "action": "blocker_resolution_session"
        },
        "quality_gate_failures": {
          "trigger": "quality_gate_failure_rate > 30_percent",
          "severity": "critical",
          "notification": ["quality_lead", "project_manager"],
          "action": "process_review_required"
        }
      },
      "warningAlerts": {
        "velocity_decline": {
          "trigger": "task_completion_rate_declining_3_weeks",
          "severity": "warning",
          "notification": ["team_lead"],
          "action": "retrospective_recommended"
        },
        "documentation_gaps": {
          "trigger": "documentation_coverage < 80_percent",
          "severity": "warning",
          "notification": ["documentation_lead"],
          "action": "documentation_sprint_needed"
        },
        "decision_bottlenecks": {
          "trigger": "decisions_pending > 5_days_average",
          "severity": "warning",
          "notification": ["decision_makers"],
          "action": "decision_acceleration_needed"
        }
      }
    }
  },

  "predictiveAnalytics": {
    "completionForecasting": {
      "algorithm": "monte_carlo_simulation",
      "inputs": [
        "historical_velocity",
        "remaining_work_estimates", 
        "current_blockage_rate",
        "resource_availability",
        "complexity_factors"
      ],
      "outputs": {
        "completion_date_confidence_intervals": "50%, 80%, 95% confidence ranges",
        "resource_requirements": "projected team and budget needs",
        "risk_factors": "potential issues affecting timeline"
      },
      "updateFrequency": "weekly"
    },

    "riskPrediction": {
      "algorithm": "pattern_recognition_ml",
      "riskFactors": {
        "scope_creep": {
          "indicators": ["frequent_requirement_changes", "stakeholder_feedback_volume"],
          "probability": "calculated",
          "impact": "estimated",
          "mitigation": "suggested"
        },
        "resource_constraints": {
          "indicators": ["team_utilization_rate", "skill_gaps", "availability_patterns"],
          "probability": "calculated",
          "impact": "estimated", 
          "mitigation": "suggested"
        },
        "technical_debt": {
          "indicators": ["code_complexity", "test_coverage", "refactoring_frequency"],
          "probability": "calculated",
          "impact": "estimated",
          "mitigation": "suggested"
        },
        "communication_breakdown": {
          "indicators": ["decision_delay_patterns", "stakeholder_response_time", "clarification_frequency"],
          "probability": "calculated",
          "impact": "estimated",
          "mitigation": "suggested"
        }
      }
    },

    "trendAnalysis": {
      "velocityTrends": {
        "measurement": "story_points_or_tasks_per_week",
        "analysis": ["acceleration", "deceleration", "seasonality", "volatility"],
        "prediction": "future_velocity_range"
      },
      "qualityTrends": {
        "measurement": "defect_rate_and_rework_percentage",
        "analysis": ["improvement", "degradation", "quality_patterns"],
        "prediction": "future_quality_expectations"
      },
      "satisfactionTrends": {
        "measurement": "stakeholder_feedback_sentiment",
        "analysis": ["satisfaction_patterns", "concern_areas", "improvement_areas"],
        "prediction": "stakeholder_satisfaction_trajectory"
      }
    }
  },

  "reportGeneration": {
    "executiveReports": {
      "projectStatus": {
        "frequency": "weekly",
        "sections": [
          "executive_summary",
          "key_metrics_dashboard", 
          "milestone_progress",
          "risk_assessment",
          "resource_utilization",
          "next_period_forecast"
        ],
        "audience": "executives_and_sponsors"
      },
      "stakeholderReport": {
        "frequency": "bi-weekly",
        "sections": [
          "progress_highlights",
          "completed_deliverables",
          "upcoming_milestones",
          "decisions_needing_input",
          "risk_mitigation_status"
        ],
        "audience": "business_stakeholders"
      }
    },

    "operationalReports": {
      "teamPerformance": {
        "frequency": "weekly",
        "sections": [
          "velocity_analysis",
          "task_completion_breakdown",
          "blockage_analysis",
          "quality_metrics",
          "individual_contributions",
          "improvement_recommendations"
        ],
        "audience": "team_leads_and_managers"
      },
      "processEffectiveness": {
        "frequency": "monthly",
        "sections": [
          "workflow_efficiency",
          "quality_gate_effectiveness",
          "automation_adoption",
          "knowledge_utilization",
          "process_improvement_opportunities"
        ],
        "audience": "process_improvement_team"
      }
    },

    "specializedReports": {
      "riskAssessment": {
        "frequency": "monthly",
        "sections": [
          "identified_risks",
          "risk_probability_impact_matrix",
          "mitigation_strategy_effectiveness",
          "emerging_risk_patterns",
          "risk_trend_analysis"
        ],
        "audience": "risk_management_team"
      },
      "knowledgeInsights": {
        "frequency": "quarterly",
        "sections": [
          "pattern_discovery",
          "lesson_learned_analysis",
          "best_practice_adoption",
          "antipattern_prevention",
          "knowledge_transfer_effectiveness"
        ],
        "audience": "knowledge_management_team"
      }
    }
  },

  "dataCollectionRules": {
    "automaticCollection": {
      "taskMetrics": {
        "sources": ["tasks/*/", "execution/*/"],
        "frequency": "real-time",
        "metrics": ["completion_rate", "cycle_time", "blockage_duration", "rework_frequency"]
      },
      "requirementMetrics": {
        "sources": ["requirements/*/"],
        "frequency": "daily",
        "metrics": ["quality_gate_pass_rate", "stakeholder_specificity", "change_frequency"]
      },
      "decisionMetrics": {
        "sources": ["decisions/*/"],
        "frequency": "daily", 
        "metrics": ["journey_completeness", "alternative_count", "implementation_success"]
      },
      "knowledgeMetrics": {
        "sources": ["knowledge/*/"],
        "frequency": "weekly",
        "metrics": ["pattern_utilization", "lesson_application", "knowledge_growth"]
      }
    },

    "calculationRules": {
      "aggregationMethods": {
        "velocity": "moving_average_3_weeks",
        "quality": "weighted_average_by_importance",
        "health": "composite_score_with_weights",
        "satisfaction": "sentiment_analysis_rolling_window"
      },
      "normalizationRules": {
        "cross_project_comparison": "normalize_by_project_size_and_complexity",
        "time_series_analysis": "account_for_seasonality_and_trends",
        "benchmarking": "compare_against_industry_standards"
      }
    }
  },

  "visualizationSchemas": {
    "dashboardLayouts": {
      "executiveDashboard": {
        "layout": "grid_4x3",
        "components": [
          "project_health_gauge",
          "milestone_timeline",
          "budget_burn_chart",
          "risk_heat_map",
          "team_velocity_trend",
          "stakeholder_satisfaction",
          "key_metrics_summary",
          "upcoming_decisions",
          "critical_blockers",
          "completion_forecast",
          "resource_utilization",
          "quality_indicators"
        ]
      },
      "teamDashboard": {
        "layout": "grid_3x4",
        "components": [
          "sprint_burndown",
          "task_status_board",
          "individual_workload",
          "blockage_tracker",
          "quality_metrics",
          "velocity_chart",
          "upcoming_deadlines",
          "decision_pending",
          "knowledge_recommendations",
          "process_efficiency",
          "team_satisfaction",
          "improvement_suggestions"
        ]
      }
    },

    "chartTypes": {
      "trending": ["line_chart", "area_chart", "sparkline"],
      "comparison": ["bar_chart", "column_chart", "radar_chart"],
      "distribution": ["pie_chart", "donut_chart", "treemap"],
      "correlation": ["scatter_plot", "bubble_chart", "heatmap"],
      "progress": ["gauge", "progress_bar", "milestone_timeline"],
      "flow": ["sankey_diagram", "funnel_chart", "process_flow"]
    }
  },

  "integrationPoints": {
    "dataExport": {
      "formats": ["json", "csv", "pdf", "excel"],
      "scheduling": "automated_exports_on_schedule",
      "customization": "stakeholder_specific_views"
    },
    "externalSystems": {
      "businessIntelligence": "standard_bi_tool_connectors",
      "projectManagement": "integration_with_pm_tools",
      "communicationPlatforms": "automated_report_distribution"
    }
  },

  "projectHealthMetrics": {
    "calculationFrequency": "per-iteration"
  }
} 